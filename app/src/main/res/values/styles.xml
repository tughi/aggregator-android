<resources>

    <style name="DarkTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:colorBackground">@color/dark_theme__background</item>
        <item name="android:colorEdgeEffect">?colorAccent</item>
        <item name="colorPrimary">@color/dark_theme__primary</item>
        <item name="colorPrimaryDark">@color/dark_theme__primary_dark</item>
        <item name="colorAccent">@color/dark_theme__accent</item>
        <item name="colorBottomNavigation">@color/dark_theme__bottom_navigation</item>
        <item name="colorEntryListHeader">@color/dark_theme__entry_list_header</item>
        <item name="colorFaviconBackground">@color/dark_theme__favicon_background</item>
        <item name="android:keepScreenOn">@bool/debug</item>
    </style>

    <style name="LightTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:colorBackground">@color/light_theme__background</item>
        <item name="android:colorEdgeEffect">?colorAccent</item>
        <item name="colorPrimary">@color/light_theme__primary</item>
        <item name="colorPrimaryDark">@color/light_theme__primary_dark</item>
        <item name="colorAccent">@color/light_theme__accent</item>
        <item name="colorBottomNavigation">@color/light_theme__bottom_navigation</item>
        <item name="colorEntryListHeader">@color/light_theme__entry_list_header</item>
        <item name="colorFaviconBackground">@color/light_theme__favicon_background</item>
        <item name="android:keepScreenOn">@bool/debug</item>
    </style>

</resources>
